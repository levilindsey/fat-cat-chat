- var currentVersion = '?v=0.0.4-3';
- var BASE_DIR = '';

doctype html
html(lang='en')
  head
    title
      | Fat-Cat Chat
    meta(charset='utf-8')
    meta(name='description', content='A simple IRC-like chat server.')
    link(rel='shortcut icon', href='#{BASE_DIR}/images/favicon.ico#{currentVersion}')
